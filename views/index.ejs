<div class="author">
  <h1 class="author__heading">Hi, I am Saransh.</h1>
  <p class="author__body">Web developer and content creator</p>
</div>

<img
  src="https://raw.githubusercontent.com/RaddyTheBrand/25.NodeJs-Express-EJS-MongoDB--Blog/main/public/img/hero-image.webp"
  alt="person looking out through window"
  class="hero-img"
  width="981"
  height="528"
/>

<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>
  <ul class="arthor-ul">
    <% data.forEach(post => { %>
    <li>
      <a href="/post/<%= post._id %>">
        <span><%= post.title %></span>
        <span class="article-list__date"
          ><%= post.createdAt.toDateString() %></span
        >
      </a>
    </li>
    <% }) %>
  </ul>

  <% if (nextPage!==null) { %>
  <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
</section>
